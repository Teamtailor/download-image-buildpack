#!/usr/bin/env bash

# fail fast
set -ueo pipefail

# debug
# set -x

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

DOCKER_IMAGE_URL_PREFIX=$(cat $ENV_DIR/DOCKER_IMAGE_URL_PREFIX)
docker_image=$DOCKER_IMAGE_URL_PREFIX:$SOURCE_VERSION

echo "---------BUILD_DIR:"
ls -lha $BUILD_DIR
echo "--------- CACHE_DIR:"
ls -lha $CACHE_DIR
echo "--------- ENV_DIR:"
ls -lha $ENV_DIR
echo "--------- DOCKER_IMAGE_URL_PREFIX:"
echo $DOCKER_IMAGE_URL_PREFIX
echo "--------- docker_image:"
echo $docker_image
echo "--------- SOURCE_VERSION:"
echo $SOURCE_VERSION
echo "---------"
echo "all env variables:"
env
echo "---------"
