#!/usr/bin/env bash

# fail fast
set -ueo pipefail

# debug
# set -x

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3


echo "---------BUILD_DIR:"
ls -lha $BUILD_DIR
echo "--------- CACHE_DIR:"
ls -lha $CACHE_DIR
echo "--------- ENV_DIR:"
ls -lha $ENV_DIR
echo "---------"

docker_image_url_prefix=$(cat $ENV_DIR/DOCKER_REGISTRY)
docker_image=$docker_image_url_prefix:$SOURCE_VERSION


echo "--------- docker_image_url_prefix:"
echo $docker_image_url_prefix
echo "--------- docker_image:"
echo $docker_image
echo "--------- SOURCE_VERSION:"
echo $SOURCE_VERSION
echo "---------"
echo "all env variables:"
env
echo "---------"
